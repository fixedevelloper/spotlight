name: Build and Push Docker Image

on:
  push:
    branches: [ "main" ]

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout Code
        uses: actions/checkout@v3

      - name: Set up JDK 21
        uses: actions/setup-java@v3
        with:
          distribution: 'temurin'
          java-version: '21'

      - name: Login to Docker Hub
        uses: docker/login-action@v2
        with:
          username: ${{ secrets.DOCKER_USERNAME }}
          password: ${{ secrets.DOCKER_PASSWORD }}

      - name: Build Docker image
        run: |
          docker build -t ${{ secrets.DOCKER_USERNAME }}/microservice:latest .

      - name: Push Docker image
        run: |
          docker push ${{ secrets.DOCKER_USERNAME }}/microservice:latest
            - name: Deploy on VPS
              uses: appleboy/ssh-action@v0.1.10
              with:
                host: ${{ secrets.VPS_HOST }}
                username: ${{ secrets.VPS_USER }}
                password: ${{ secrets.VPS_PASS }}
                script: |
                  docker pull ${{ secrets.DOCKER_USERNAME }}/microservice:latest
                  docker stop micro || true
                  docker rm micro || true
                  docker run -d -p 8080:8080 --name micro ${{ secrets.DOCKER_USERNAME }}/microservice:latest
